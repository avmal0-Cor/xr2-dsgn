				// Rotate Y
				-attachControl	($text[0] + 9)	$l	56	($text[0] + 8)
				-attachForm	($text[0] + 9)	$t	25
				
				// Rotate Z
				-attachControl	($text[0] + 10)	$l	56	($text[0] + 9)
