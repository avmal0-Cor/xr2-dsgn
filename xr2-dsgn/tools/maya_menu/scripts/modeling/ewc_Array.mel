					} else {
						$div = $div + $row;
					}
				}
				
				break;
			case 8: // Z___
				// Update 1D
				$scale = `getAttr ($obj + ".scaleZ")`;
				$rate = `floatField -query -value $inc[8]` / 100;
				for ($i = 0; $i < size($ewc_arrayVarNodePreviewArray1D); $i++)
